{% if menu %}
    {% for item in menu %}
        <li class="nav-item {{ item.classes | join(' ') }} {{ item.current ? 'active' : ''}}">
            <a class="nav-link" target="{{ item.target }}" href="{{ item.link }}">{{ item.title }}</a>
            {% if item.children %}
                <button class="sub-menu-toggler">
                    <img src="{{theme.link}}/assets/img/arrow-down-white.svg">
                </button>
            {% endif %}
            {% include "partial/submenu.twig" with {
                'menu' : item.get_children
            } %}
        </li>
    {% endfor %}
{% endif %}